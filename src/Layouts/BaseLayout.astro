---
import '@/styles/global.scss';
import '@/styles/theme.scss';

export interface Props {
	title?: string;
}

const { title } = Astro.props as Props;
---
<html>
	<head>
		<meta charset="utf-8">
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<title>{title || 'Milky Web'}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<script>
			// this exists to stop theme from flashing by setting it before css is evaluated
			import type { Theme } from '@/themeStore';
			(() => {
				let theme: Theme;
				const stored = window.localStorage.getItem('colorScheme') as Theme | null;

				if (stored) theme = stored;
				else theme = window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';

				document.querySelector('html')!.dataset.theme = theme;
			})()
		</script>
	</head>
	<body>
		<main class="main">
			<slot />
		</main>
	</body>
</html>